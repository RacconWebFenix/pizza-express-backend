{
  "version": 2,
  "builds": [
    { 
      "src": "src/main.ts", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "rewrites": [
    { 
      "source": "/(.*)", 
      "destination": "/src/main.ts" 
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/main.ts": {
      "maxDuration": 30
    }
  }
}
